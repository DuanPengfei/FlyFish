<%- include ../header.ejs %>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <% if (images.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr class="active">
                    <td>
                        Name
                    </td>
                    <td>
                        Version
                    </td>
                    <td>
                        Virtual Size
                    </td>
                    <td>
                        Created
                    </td>
                </tr>
                </thead>
                <tbody>
                <% images.forEach(function (image) { %>
                <tr class="success">
                    <td><%= image.name; %></td>
                    <td><%= image.version; %></td>
                    <td><%= image.size; %></td>
                    <td><%= image.created; %></td>
                </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <div class="alert alert-danger">
            <p>
                没有已下载的镜像
            </p>
        </div>
        <% } %>
    </div>
</div>

<%- include ../footer.ejs %>
