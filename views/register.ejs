<%- include header.ejs %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h3>注册 DockerCI</h3>

    <form action="/user/register" method="post" enctype="application/x-www-form-urlencoded">
      <div class="form-group">
        <input type="email" class="form-control" name="email" placeholder="邮箱"/>
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="username" placeholder="用户名"/>
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="密码"/>
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="password-repeat" placeholder="确认密码"/>
      </div>
      <button type="submit" class="btn btn-default ui green">注册</button>
    </form>
  </div>
</div>

<%- include footer.ejs %>
